{
  "manifest_version": 3,
  "name": "eGun Sniper",
  "version": "1.0",
  "description": "Snajper aukcyjny dla eGun.de",
  "permissions": ["storage", "notifications", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.egun.de/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["https://www.egun.de/*"]
}
